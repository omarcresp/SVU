{

//★★★Hippo's Farm Cave Variety (hotspring ファームタイプ(ファイル名)では Hotspring)★★★

   "Changes": [

//★★★FarmCave側の編集★★★

  //◆◆◆MatchFarmがオフの時◆◆◆

      {//●FarmCaveのマップ編集(デフォルトで閉じた状態)
        "Action": "EditMap",
        "Target": "Maps/FarmCave",
	"FromFile": "assets/Mod_02_Hippo'sFarmCaveVariety/Ts_AFC_HFCV_Hotspring_FarmCave_close.tmx",
        "ToArea": { "X": 6, "Y": 0, "Width": 3, "Height": 3 },
	"PatchMode": "ReplaceByLayer",
	"When": {
                  "Ts_AFC_OpenImmediately": "false",
                },
       },
      {//●FarmCaveの編集(友好度で開放(フラグは友好度でメールは香り))
        "Action": "EditMap",
        "Target": "Maps/FarmCave",
	"FromFile": "assets/Mod_02_Hippo'sFarmCaveVariety/Ts_AFC_HFCV_Hotspring_FarmCave.tmx",
        "ToArea": { "X": 6, "Y": 0, "Width": 3, "Height": 3 },
	"PatchMode": "ReplaceByLayer",
	"When": {
                  "Query: ({{Hearts:Demetrius}} >= 2) AND ({{Hearts:Robin}} >= 3)": true,
                  "HasSeenEvent": "65",
                  "Ts_AFC_OpenImmediately": "false",
                },
       },
      {//●FarmCaveの編集(ModConfigの設定で開放)
        "Action": "EditMap",
        "Target": "Maps/FarmCave",
	"FromFile": "assets/Mod_02_Hippo'sFarmCaveVariety/Ts_AFC_HFCV_Hotspring_FarmCave.tmx",
        "ToArea": { "X": 6, "Y": 0, "Width": 3, "Height": 3 },
	"PatchMode": "ReplaceByLayer",
	"When": {
                  "Ts_AFC_OpenImmediately": "true",
                },
       },


      {//●FarmCaveにワープ追加 (の場合)
        "Action": "EditMap",
        "Target": "Maps/FarmCave",
        "TextOperations": [
                            {
                              "Operation": "Append",
                              "Target": ["MapProperties", "Warp"],
                              "Value": "7 -1 Custom_AdditionalFarmCave 9 14",
                              "Delimiter": " ",
                            },
                          ],
	"When": { "Ts_AFC_AvoidCertainBugs": "false" },
      },
      {//●FarmCaveにワープ追加 2 (の場合)
        "Action": "EditMap",
        "Target": "Maps/FarmCave",
        "TextOperations": [
                            {
                              "Operation": "Append",
                              "Target": ["MapProperties", "Warp"],
                              "Value": "7 -1 Custom_AdditionalFarmCave2 9 14",
                              "Delimiter": " ",
                            },
                          ],
	"When": { "Ts_AFC_AvoidCertainBugs": "true" },
      },


  //◆◆◆AddFarmCave側の編集◆◆◆

      {//●AddFarmCaveのマップ編集 見た目を合わせる(Standardを流用)
        "Action": "EditMap",
        "Target": "Maps/Custom_AdditionalFarmCave",
	"FromFile": "assets/Mod_02_Hippo'sFarmCaveVariety/Ts_AFC_HFCV_Standard_FarmCave_AFC.tmx",
	"PatchMode": "ReplaceByLayer",
       },
      {//●AddFarmCaveのマップ編集 見た目を合わせる(Standardを流用)
        "Action": "EditMap",
        "Target": "Maps/Custom_AdditionalFarmCave2",
	"FromFile": "assets/Mod_02_Hippo'sFarmCaveVariety/Ts_AFC_HFCV_Standard_FarmCave_AFC.tmx",
	"PatchMode": "ReplaceByLayer",
       },

      {//●AddFarmCaveのワープ変更 (の場合)
        "Action": "EditMap",
        "Target": "Maps/Custom_AdditionalFarmCave",
        "MapProperties": { "Warp": "9 15 FarmCave 7 0" },
	"When": { "Ts_AFC_AvoidCertainBugs": "false" },
      },
      {//●AddFarmCaveのワープ変更 2 (の場合)
        "Action": "EditMap",
        "Target": "Maps/Custom_AdditionalFarmCave2",
        "MapProperties": { "Warp": "9 15 FarmCave 7 0" },
	"When": { "Ts_AFC_AvoidCertainBugs": "true" },
      },


              ] //▼"Changes"の終了▼
}